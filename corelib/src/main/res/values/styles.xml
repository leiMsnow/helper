<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProgressDialog" parent="@android:style/Theme.Dialog">
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <!-- actionbar的overflow-->
    <style name="ActionButton.Overflow.Light" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_moreoverflow_mtrl_alpha</item>
    </style>
    <!-- search_view-->
    <style name="SearchView.Light" parent="Base.Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/selector_textfield_search_material</item>
        <item name="submitBackground">@drawable/selector_textfield_search_material</item>
        <item name="closeIcon">@mipmap/ic_clear_mtrl_alpha</item>
        <item name="searchIcon">@mipmap/ic_menu_search</item>
        <item name="searchHintIcon">@mipmap/ic_menu_search</item>
        <item name="goIcon">@mipmap/ic_menu_search</item>
    </style>

    <style name="SearchView.Brown" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchIcon">@mipmap/ic_search_brown</item>
        <item name="searchHintIcon">@mipmap/ic_search_brown</item>
        <item name="goIcon">@mipmap/ic_search_brown</item>
    </style>
    <style name="Widget.ProgressBar.Red" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_red</item>
    </style>
    <style name="Widget.ProgressBar.Horizontal.New" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_new</item>
        <item name="android:minHeight">4dp</item>
    </style>

    <style name="Widget.Toolbar.TextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/actionMenuTextColor</item>
    </style>

</resources>