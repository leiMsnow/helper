<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="navigationIcon">@mipmap/ic_ab_back_mtrl_am_alpha</item>
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.Light</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="searchViewStyle">@style/SearchView.Light</item>
    </style>

    <style name="AppTheme.LightBlue">
        <item name="colorPrimary">@color/theme_light_blue</item>
        <item name="colorPrimaryDark">@color/theme_light_blue</item>
        <item name="colorAccent">@color/theme_light_blue</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/theme_red</item>
        <item name="colorPrimaryDark">@color/theme_red</item>
        <item name="colorAccent">@color/theme_red</item>
    </style>

    <style name="AppTheme.DeepPurple">
        <item name="colorPrimary">@color/theme_deep_purple</item>
        <item name="colorPrimaryDark">@color/theme_deep_purple</item>
        <item name="colorAccent">@color/theme_deep_purple</item>
    </style>

    <style name="AppTheme.LightGreen">
        <item name="colorPrimary">@color/theme_light_green</item>
        <item name="colorPrimaryDark">@color/theme_light_green</item>
        <item name="colorAccent">@color/theme_light_green</item>
    </style>

    <style name="AppTheme.Pink">
        <item name="colorPrimary">@color/theme_pink</item>
        <item name="colorPrimaryDark">@color/theme_pink</item>
        <item name="colorAccent">@color/theme_pink</item>
    </style>

    <style name="AppTheme.Yellow">
        <item name="colorPrimary">@color/theme_yellow</item>
        <item name="colorPrimaryDark">@color/theme_yellow</item>
        <item name="colorAccent">@color/theme_yellow</item>
    </style>

</resources>