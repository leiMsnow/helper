<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/rc_layout"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_title"
        style="@style/RCTheme.Message.TextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="详情"
        android:textColor="@color/white" />


    <LinearLayout
        android:id="@+id/ll_service_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/tv_title"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            style="@style/RCTheme.Message.TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="服务类型"
            android:textColor="@color/theme_deep_purple" />


        <TextView
            android:id="@+id/tv_serviceType"
            style="@style/RCTheme.Message.TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/normal_dark_grey"
            tools:text="专业技能" />

    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        android:layout_below="@+id/ll_service_type" />

    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/ll_service_type"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            style="@style/RCTheme.Message.TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="价格"
            android:textColor="@color/theme_deep_purple" />


        <TextView
            android:id="@+id/tv_price"
            style="@style/RCTheme.Message.TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/normal_dark_grey"
            tools:text="5000/26天(6.9折)" />

    </LinearLayout>

    <com.rey.material.widget.Button
        android:id="@+id/btn_finish"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_price"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/theme_deep_purple"
        android:enabled="true"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="去完善"
        android:textColor="@color/white"
        app:rd_maxRippleRadius="match_view"
        app:rd_rippleColor="@color/translucent_a80" />

</RelativeLayout>
