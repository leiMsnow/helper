<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.White" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/brown_300</item>
        <item name="colorPrimaryDark">@color/grey_200</item>
        <item name="colorAccent">@color/grey_700</item>
        <item name="android:textColorPrimary">@color/brown_300</item>
        <item name="buttonBackground">@drawable/selector_btn_bg_light_blue</item>
        <item name="createGroupIcon">@drawable/selector_group_icon_light_blue</item>
        <item name="labelSelectBG">@drawable/selector_label_bg_light_blue</item>
        <!-- 禁止item多点触摸 -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="AppTheme.White.Base">
        <item name="buttonBackground">@drawable/selector_btn_bg_orange</item>
        <item name="createGroupIcon">@drawable/selector_group_icon_orange</item>
        <item name="labelSelectBG">@drawable/selector_label_bg_orange</item>
    </style>

    <style name="AppTheme.LightBlue.Base">
        <item name="buttonBackground">@drawable/selector_btn_bg_light_blue</item>
        <item name="createGroupIcon">@drawable/selector_group_icon_light_blue</item>
        <item name="labelSelectBG">@drawable/selector_label_bg_light_blue</item>
    </style>

    <style name="AppTheme.Red.Base">
        <item name="buttonBackground">@drawable/selector_btn_bg_red</item>
        <item name="createGroupIcon">@drawable/selector_group_icon_red</item>
        <item name="labelSelectBG">@drawable/selector_label_bg_red</item>
    </style>

    <style name="AppTheme.DeepPurple.Base">
        <item name="buttonBackground">@drawable/selector_btn_bg_deep_purple</item>
        <item name="createGroupIcon">@drawable/selector_group_icon_deep_purple</item>
        <item name="labelSelectBG">@drawable/selector_label_bg_deep_purple</item>
    </style>

    <style name="AppTheme.LightGreen.Base">
        <item name="buttonBackground">@drawable/selector_btn_bg_light_green</item>
        <item name="createGroupIcon">@drawable/selector_group_icon_light_green</item>
        <item name="labelSelectBG">@drawable/selector_label_bg_light_green</item>
    </style>

    <style name="AppTheme.Pink.Base">
        <item name="buttonBackground">@drawable/selector_btn_bg_pink</item>
        <item name="createGroupIcon">@drawable/selector_group_icon_pink</item>
        <item name="labelSelectBG">@drawable/selector_label_bg_pink</item>
    </style>

    <style name="AppTheme.Yellow.Base">
        <item name="buttonBackground">@drawable/selector_btn_bg_yellow</item>
        <item name="createGroupIcon">@drawable/selector_group_icon_yellow</item>
        <item name="labelSelectBG">@drawable/selector_label_bg_yellow</item>
    </style>

    <style name="AppTheme.White.Base.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/translucent_a80</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

</resources>