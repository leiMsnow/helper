<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" >

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/primary_material_white</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_white</item>
        <item name="colorAccent">@color/accent_material_white</item>
        <item name="android:textColorPrimary">@color/primary_text_material_brown</item>
    </style>

    <style name="AppTheme.Blue"  parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_material_blue</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_blue</item>
        <item name="colorAccent">@color/accent_material_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="createGroupBtn">@color/primary_material_blue</item>
    </style>

    <style name="AppTheme.Red"  parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_material_red</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_red</item>
        <item name="colorAccent">@color/accent_material_red</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="createGroupBtn">@color/primary_material_red</item>
    </style>

</resources>