<resources>
    <!-- 首页底部menu样式-->
    <style name="MainBottomMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:layout_marginBottom">4dp</item>-->
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/selector_main_menu_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/transparent</item>
        <!--<item name="android:padding">4dp</item>-->
    </style>
    <!-- 聊天设置父容器样式-->
    <style name="ChatSettingLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_white_to_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <!--聊天设置左侧文本样式-->
    <style name="ChatSettingLeftText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/main_brown</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--聊天设置右侧文本样式-->
    <style name="ChatSettingRightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>
    <!--提示框样式-->
    <style name="ProcessDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!-- 用户信息父容器-->
    <style name="UserInfoAttrParent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:enabled">false</item>
        <!--<item name="android:layout_marginLeft">48dp</item>-->
        <!--<item name="android:layout_marginRight">48dp</item>-->
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 用户信息：粉丝、关注、话题相关-->
    <style name="UserInfoAttrBottomText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="UserInfoAttrTopText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="UserInfoAttrLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2dp</item>
    </style>
    <!--粉丝、关注、话题相关-圆点提示-->
    <style name="UserInfoBadge">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/shape_corners_white_bg</item>
    </style>

    <!-- 创建圈子文本的样式-->
    <style name="CreateGroupTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textColorHint">@color/normal_dark_grey</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="ClearEditTextStyle">
        <!--<item name="android:background">@drawable/selector_edit_text</item>-->
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_brown</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!-- 横向分割线-->
    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/normal_light_grey</item>
    </style>
    <!-- 定长横向分割线-->
    <style name="FixedHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginRight">64dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:background">@color/red_300</item>
    </style>
    <!-- 纵向分割线-->
    <style name="VerticalLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/normal_light_grey</item>
    </style>

    <!-- 可点击文本样式-->
    <style name="ClickTextViewStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/selector_click_text_color</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <!-- 通用按钮样式-->
    <style name="CommonButtonStyle">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:enabled">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">?attr/buttonBackground</item>
    </style>
</resources>
