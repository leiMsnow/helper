<resources>
    <!-- 聊天设置父容器样式-->
    <style name="ChatSettingLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@drawable/selector_white_to_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <!--聊天设置左侧文本样式-->
    <style name="ChatSettingLeftText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/primary_text_material_brown</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--聊天设置右侧文本样式-->
    <style name="ChatSettingRightText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <!--提示框样式-->
    <style name="process_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    <!--搜索框样式-->
    <style name="Widget.AppCompat.SearchView.White" parent="Base.Widget.AppCompat.SearchView">
        <item name="layout">@layout/abc_search_view</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <!-- 用户信息父容器-->
    <style name="UserInfoAttrParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 用户信息：粉丝、关注、话题相关-->
    <style name="UserInfoAttrBottomText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="UserInfoAttrTopText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="UserInfoAttrLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2dp</item>
    </style>
    <!--粉丝、关注、话题相关-圆点提示-->
    <style name="UserInfoBadge">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/shape_corners_white_bg</item>
    </style>

</resources>
