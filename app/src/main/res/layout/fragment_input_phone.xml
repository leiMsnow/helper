<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="@string/phone_num"
            android:textSize="16sp" />

        <com.tongban.im.widget.view.ClearEditText
            android:id="@+id/et_input_phone"
            android:layout_width="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv_phone"
            android:background="@null"
            style="@style/ClearEditTextStyle"
            android:digits="@string/digits"
            android:hint="@string/input_register_phone_num"
            android:textColorHint="@color/normal_grey"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_btn_bg_orange"
        android:enabled="false"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
