<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_group_icon"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:background="@drawable/selector_group_icon"
                android:scaleType="center"
                android:src="@mipmap/ic_menu_camera" />
            <!--圈子名称-->
            <EditText
                android:id="@+id/et_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="48dp"
                android:hint="@string/hint_group_name"
                android:minHeight="40dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_300"
                android:textSize="14sp" />

            <!--圈子简介-->
            <EditText
                android:id="@+id/et_group_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:hint="@string/hint_group_introduction"
                android:minHeight="40dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_300"
                android:textSize="12sp" />

            <!--圈子标签-->
            <EditText
                android:id="@+id/et_group_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/ic_group_label"
                android:hint="@string/hint_group_label"
                android:minHeight="40dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_300"
                android:textSize="12sp" />

            <!--圈子位置-->
            <EditText
                android:id="@+id/et_group_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/ic_group_location"
                android:hint="@string/hint_group_location"
                android:minHeight="40dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_300"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_group_secret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/group_secret"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_group_secret_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/group_secret_detail"
                    android:textColor="@color/gray_300" />

                <TextView
                    android:id="@+id/tv_group_secret_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_group_secret_detail"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/group_secret_update"
                    android:textColor="@color/accent_material_blue" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_group_secret_detail"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="72dp"
                android:background="?attr/createGroupBtn"
                android:text="@string/finish_create"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
