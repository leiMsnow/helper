<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar" />

    <LinearLayout
        android:id="@+id/tab_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_topic_by_hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_topic_tab_color"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="按热度"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_topic_by_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_topic_tab_color"
            android:gravity="center"
            android:padding="8dp"
            android:text="我参加的"
            android:textSize="16sp" />
    </LinearLayout>

    <!--<View-->
    <!--android:id="@+id/move_line"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="2dp"-->
    <!--android:layout_below="@+id/tab_linear"-->
    <!--android:background="@color/accent_material_red" />-->

    <ListView

        android:id="@+id/lv_chat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_linear"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:scrollbars="none" />

    <Button
        android:id="@+id/btn_create_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_circle"
        android:layout_below="@+id/lv_chat_list"/>
</RelativeLayout>
