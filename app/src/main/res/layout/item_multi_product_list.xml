<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/weak_grey"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <!-- 序号 -->
        <TextView
            android:id="@+id/tv_cursor"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_circle_bg_deep_orange"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"/>
        <!-- 商品名称 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="澳大利亚品牌 Aerogard"
            android:textColor="@color/main_black"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 商品图片的容器 -->
    <LinearLayout
        android:id="@+id/ll_product_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_img_profile_bg"/>
    </LinearLayout>

    <!-- 【图书简介】 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="【图书简介】"
        android:textColor="@color/main_deep_orange"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【图书简介】"/>

    <!-- 【作者简介】 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="【作者简介】"
        android:textColor="@color/main_deep_orange"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【图书简介】"/>
    <!-- 【推荐指数】 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="【推荐指数】"
        android:textColor="@color/main_deep_orange"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【图书简介】"/>
    <!-- 【推荐理由】 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="【推荐理由】"
        android:textColor="@color/main_deep_orange"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【图书简介】"/>

    <!-- 查看商品详情 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_corners_bg_deep_orange"
        android:text="查看详情"
        android:textColor="@color/white"
        android:textSize="18sp"/>
</LinearLayout>