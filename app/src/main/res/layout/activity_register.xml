<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar" />

    <com.tongban.im.widget.view.ClearEditText
        android:id="@+id/et_user"
        android:layout_below="@+id/toolbar"
        android:digits="@string/digits"
        android:hint="手机号"
        style="@style/ClearEditTextStyle"/>

    <com.tongban.im.widget.view.ClearEditText
        android:id="@+id/et_pwd"
        style="@style/ClearEditTextStyle"
        android:layout_below="@+id/et_user"
        android:hint="密 码"
        android:inputType="textPassword" />

    <LinearLayout
        android:id="@+id/ll_verify_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pwd"
        android:background="@drawable/selector_edit_text"
        android:orientation="horizontal">

        <com.tongban.im.widget.view.ClearEditText
            android:id="@+id/et_verify_code"
            android:layout_below="@+id/et_user"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:inputType="textPassword"
            style="@style/ClearEditTextStyle"/>

        <TextView
            android:id="@+id/tv_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_pwd"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:text="@string/get_verify_code"
            android:textColor="@color/selector_text_color" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_verify_code"
        android:background="@drawable/selector_cb_bg"
        android:button="@null" />

    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cb_agree"
        android:layout_alignTop="@+id/cb_agree"
        android:layout_below="@+id/ll_verify_code"
        android:layout_toRightOf="@+id/cb_agree"
        android:gravity="center"
        android:text="阅读并同意"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_agree"
        android:layout_alignTop="@+id/tv_agree"
        android:layout_below="@+id/ll_verify_code"
        android:layout_toRightOf="@+id/tv_agree"
        android:gravity="center"
        android:text="《用户协议》"
        android:textColor="@color/light_blue_300"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_btn_bg_orange"
        android:enabled="false"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
