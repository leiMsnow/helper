<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weak_grey">


    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar" />

    <com.tongban.im.widget.view.ClearEditText
        android:id="@+id/et_phone_num"
        style="@style/ClearEditTextStyle"
        android:layout_below="@+id/toolbar"
        android:digits="@string/digits"
        android:hint="@string/phone_num"
        android:inputType="number"
        android:maxLength="11" />

    <View
        style="@style/HorizontalLine"
        android:layout_below="@+id/et_phone_num" />

    <com.tongban.im.widget.view.ClearEditText
        android:id="@+id/et_pwd"
        style="@style/ClearEditTextStyle"
        android:layout_below="@+id/et_phone_num"
        android:hint="@string/pwd"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLength="24" />

    <View
        style="@style/HorizontalLine"
        android:layout_below="@+id/et_pwd" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        style="@style/ClickTextViewStyle"
        android:layout_below="@+id/et_pwd"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/forget_pwd" />

    <TextView
        android:id="@+id/tv_new_user_register"
        style="@style/ClickTextViewStyle"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_pwd"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/new_register" />

    <Button
        android:id="@+id/btn_login"
        style="@style/CommonButtonStyle"
        android:text="@string/login" />

</RelativeLayout>
