<?xml version="1.0" encoding="utf-8"?><!--底部通用布局 - 收藏和评论-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:padding="2dp"
        android:src="@mipmap/ic_topic_collect_count" />
    <!-- 收藏数量-->
    <TextView
        android:id="@+id/tv_collect_count"
        style="@style/MainContentSmall"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_collect"
        android:gravity="center"
        android:text="0" />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/tv_collect_count"
        android:padding="2dp"
        android:src="@mipmap/ic_topic_comment_count" />
    <!-- 评论数量-->
    <TextView
        android:id="@+id/tv_comment_count"
        style="@style/MainContentSmall"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_comment"
        android:gravity="center"
        android:text="0" />


</RelativeLayout>
