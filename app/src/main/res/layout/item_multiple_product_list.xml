<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/weak_grey"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_corner_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:singleLine="true"
            android:text="从此蚊子和宝宝“绝缘”"
            android:textColor="@color/main_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="8dp"
            android:text="从此蚊子和宝宝“绝缘”从此蚊从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝从此蚊子和宝宝"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_collect_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:singleLine="true"
            android:text="230"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>