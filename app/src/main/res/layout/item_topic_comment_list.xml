<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/weak_grey">


    <View
        android:layout_width="2dp"
        android:layout_height="16dp"
        android:layout_marginLeft="36dp"
        android:background="@color/white" />

    <com.tongban.corelib.widget.view.CircleImageView
        android:id="@+id/iv_user_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        android:src="@drawable/rc_default_portrait" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/rl_reply_right"
        android:layout_below="@+id/iv_user_portrait"
        android:layout_marginLeft="36dp"
        android:background="@color/white" />


    <RelativeLayout
        android:id="@+id/rl_reply_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_user_portrait"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_topic_comment">


        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tv_user_name"
            android:singleLine="true"
            android:textColor="@color/normal_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/normal_grey" />

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/normal_dark_grey" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_comment_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@mipmap/ic_topic_comment"
            android:padding="4dp"
            android:text="回复"
            android:drawablePadding="4dp"
            android:textColor="@color/selector_join_text_color"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>