<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_topic_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_topic_icon"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/iv_topic_icon"
            android:text="昵称" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_nickname"
            android:layout_below="@+id/tv_nickname"
            android:text="男" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_sex"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_sex"
            android:text="3岁" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_nickname"
            android:text="北京" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_address"
            android:layout_alignTop="@id/tv_age"
            android:text="08-01-11:15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_topic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="话题名称" />

    <TextView
        android:id="@+id/tv_topic_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文话题正文"
        android:textColor="#ADAAAA" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btn_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:text="赞" />

        <Button
            android:id="@+id/btn_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/btn_praise"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:text="回复" />
    </RelativeLayout>
</LinearLayout>
