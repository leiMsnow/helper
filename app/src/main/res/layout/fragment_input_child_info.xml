<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_toast_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="96dp"
        android:text="添加宝宝信息，可以获得精准化推荐，还可以与同龄的孩子们一起成长哦"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_input_nickname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/tv_toast_info"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:gravity="center"
        android:hint="宝宝昵称"
        android:textSize="12sp" />

    <View
        android:id="@+id/v_line_one"
        style="@style/FixedHorizontalLine"
        android:layout_below="@+id/et_input_nickname"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_input_birthday"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/v_line_one"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:gravity="center"
        android:hint="宝宝出生日期"
        android:textSize="12sp" />

    <View
        android:id="@+id/v_line_two"
        style="@style/FixedHorizontalLine"
        android:layout_below="@+id/et_input_birthday"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line_two"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="48dp"
        android:src="@mipmap/ic_my_collect" />

    <ImageView
        android:id="@+id/iv_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line_two"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@+id/iv_boy"
        android:src="@mipmap/ic_my_collect" />

    <TextView
        android:id="@+id/tv_boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_boy"
        android:layout_below="@+id/iv_boy"
        android:drawableLeft="@mipmap/ic_boy"
        android:paddingTop="8dp"
        android:text="男宝宝"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_girl"
        android:layout_below="@+id/iv_boy"
        android:drawableLeft="@mipmap/ic_girl"
        android:paddingTop="8dp"
        android:text="女宝宝"
        android:textSize="12sp" />
</RelativeLayout>
