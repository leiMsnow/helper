<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weak_grey">


    <ScrollView
        android:id="@+id/sl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <!-- 专题头图 -->
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <!-- title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_head"
                android:layout_margin="16dp"
                android:singleLine="true"
                android:textColor="@color/main_black"
                android:textSize="18sp" />

            <!-- 专题标签 -->
            <com.tongban.corelib.widget.view.FlowLayout
                android:id="@+id/fl_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_toLeftOf="@+id/tv_create_time"
                android:paddingLeft="16dp" />

            <TextView
                android:id="@+id/tv_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_title"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/normal_grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_tag"
                android:layout_margin="16dp"
                android:textColor="@color/normal_dark_grey" />

            <!-- 商品列表 -->
            <LinearLayout
                android:id="@+id/ll_product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_desc"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/ll_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_product_list"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/normal_light_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="96dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="更多相关话题"
                    android:textColor="@color/main_black"
                    android:textSize="16sp" />

                <!-- 相关话题列表 -->
                <LinearLayout
                    android:id="@+id/ll_topic_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:divider="@drawable/shape_horizontal_line"
                    android:orientation="vertical"
                    android:showDividers="middle|end|beginning" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
    <!-- toolbar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/include_theme_toolbar" />
</RelativeLayout>