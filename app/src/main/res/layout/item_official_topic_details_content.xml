<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_product_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/shape_circle_bg_deep_orange" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_product_icon"
            android:layout_alignTop="@+id/iv_product_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/iv_product_icon"
            android:gravity="center"
            android:textColor="@color/main_black"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_product_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="【产品介绍】"
        android:textColor="@color/main_deep_orange" />

    <TextView
        android:id="@+id/tv_product_introduce_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/normal_dark_grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_product_parameters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="【产品参数】"
        android:textColor="@color/main_deep_orange" />

    <TextView
        android:id="@+id/tv_product_parameters_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/normal_dark_grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_product_advantage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="【产品优势】"
        android:textColor="@color/main_deep_orange" />

    <TextView
        android:id="@+id/tv_product_advantage_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/normal_dark_grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_product_disadvantage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="【产品不足】"
        android:textColor="@color/main_deep_orange" />

    <TextView
        android:id="@+id/tv_product_disadvantage_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/normal_dark_grey"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_check_detail"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/selector_btn_bg_check_detail"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_collect_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/iv_share"
            android:drawableLeft="@mipmap/ic_topic_comment"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="233" />

    </RelativeLayout>
</LinearLayout>
