<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_user_head"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="72dp">
        <!-- 头像-->
        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_img_user_default" />

        <ImageView
            android:id="@+id/iv_add_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@mipmap/ic_menu_add"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_cancel_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@mipmap/ic_joined"
            android:visibility="gone" />
    </FrameLayout>
    <!-- 用户信息布局-->
    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fl_user_head"
        android:layout_alignTop="@+id/fl_user_head"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/fl_user_head"
        android:orientation="vertical">


        <!-- 用户名称、年龄、星座-->
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="24dp"
            android:text="小王子  1岁23天  狮子座"
            android:textColor="@color/white" />

        <!-- 用户标签-->
        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:text="独立行走|淘气包|吃固体食物"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_private_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fl_user_head"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/fl_user_head"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical"
        android:text="私聊"
        android:visibility="gone"
        android:textColor="@color/red_300" />
    <!--底部粉丝、关注、话题布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:background="#50ffffff"
        android:orientation="vertical">

        <!-- 粉丝、关注、话题数量布局-->
        <LinearLayout
            style="@style/UserInfoAttrParent"
            android:layout_marginTop="8dp">
            <!-- 粉丝数量布局-->
            <RelativeLayout
                android:id="@+id/rl_fans_num"
                style="@style/UserInfoAttrLayout">
                <!-- 粉丝数量文本-->
                <TextView
                    android:id="@+id/tv_fans_num"
                    style="@style/UserInfoAttrTopText"
                    android:text="300" />
                <!-- 粉丝badge-->
                <View
                    android:id="@+id/badge_fans"
                    style="@style/UserInfoBadge"
                    android:layout_toRightOf="@+id/tv_fans_num"
                    android:visibility="gone" />
            </RelativeLayout>
            <!-- 关注数量布局-->
            <RelativeLayout
                android:id="@+id/rl_follow_num"
                style="@style/UserInfoAttrLayout">
                <!-- 关注数量-->
                <TextView
                    android:id="@+id/tv_follow_num"
                    style="@style/UserInfoAttrTopText"
                    android:text="300" />
                <!-- 关注badge-->
                <View
                    android:id="@+id/badge_follow"
                    style="@style/UserInfoBadge"
                    android:layout_toRightOf="@+id/tv_follow_num"
                    android:visibility="gone" />
            </RelativeLayout>

            <!-- 圈子数量布局-->
            <RelativeLayout
                android:id="@+id/rl_group_num"
                style="@style/UserInfoAttrLayout">
                <!-- 圈子数量-->
                <TextView
                    android:id="@+id/tv_group_num"
                    style="@style/UserInfoAttrTopText"
                    android:text="300" />
                <!-- 圈子badge-->
                <View
                    android:id="@+id/badge_topic"
                    style="@style/UserInfoBadge"
                    android:layout_toRightOf="@+id/tv_group_num" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/UserInfoAttrParent"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_fans"
                style="@style/UserInfoAttrBottomText"
                android:text="@string/fans" />

            <TextView
                android:id="@+id/tv_follow"
                style="@style/UserInfoAttrBottomText"
                android:text="@string/follow" />

            <TextView
                android:id="@+id/tv_group"
                style="@style/UserInfoAttrBottomText"
                android:text="@string/group" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>