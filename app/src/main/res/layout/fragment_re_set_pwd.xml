<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_edit_text"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="您的手机号是:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="15910662995"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_verify_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_phone_num"
        android:background="@drawable/selector_edit_text"
        android:orientation="horizontal">

        <com.tongban.im.widget.view.ClearEditText
            android:id="@+id/et_verify_code"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/et_user"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_pwd"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:text="@string/get_verify_code"
            android:textColor="@color/selector_text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_verify_code"
        android:background="@drawable/selector_edit_text"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reset_pwd"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="重设密码"
            android:textSize="16sp" />

        <com.tongban.im.widget.view.ClearEditText
            android:id="@+id/et_set_pwd"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv_phone"
            android:background="@null"
            android:digits="@string/digits"
            android:hint="6-24位字母或数字"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColorHint="@color/grey_500"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_pwd_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_btn_bg_orange"
        android:enabled="false"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
