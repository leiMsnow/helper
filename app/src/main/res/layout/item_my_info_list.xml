<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/selector_white_to_gray"
    android:descendantFocusability="blocksDescendants">

    <com.tongban.corelib.widget.view.CircleImageView
        android:id="@+id/iv_user_icon"
        style="@style/MainImagePortrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/MainTitle.User"
        android:layout_alignBottom="@+id/iv_user_icon"
        android:layout_alignTop="@+id/iv_user_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/iv_user_icon"
        android:gravity="center"
        android:text="Children" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_join_btn_bg"
        android:enabled="false"
        android:text="@string/followed"
        android:textColor="@color/selector_join_text_color"
        android:textSize="12sp"
        android:visibility="gone" />

    <View
        style="@style/HorizontalLine"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
