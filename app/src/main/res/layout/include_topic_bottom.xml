<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:descendantFocusability="blocksDescendants">


    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/ic_topic_comment" />

    <TextView
        android:id="@+id/tv_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/iv_comment"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/normal_grey"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/chb_collect"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/tv_comment_count"
        android:background="@drawable/selector_topic_collect"
        android:button="@null" />

    <TextView

        android:id="@+id/tv_collect_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/chb_collect"
        android:gravity="center"
        android:text="300"
        android:textColor="@color/normal_grey"
        android:textSize="12sp" />

</RelativeLayout>
