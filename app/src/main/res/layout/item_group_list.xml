<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tongban.im.widget.view.HexagonLayout
            android:id="@+id/hl_group_portrait"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/ll_bottom_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_unread_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@color/remind_msg_pink"
                android:padding="5dp"
                android:text="101"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_remind_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="[有人@你]"
                android:textColor="@color/remind_msg_pink"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_latest_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3分钟前"
                android:textColor="@color/light_gray"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_bottom_msg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:singleLine="true"
            android:text="崔玉涛现身说法零距离"
            android:textSize="16sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>