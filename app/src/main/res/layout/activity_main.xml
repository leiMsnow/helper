<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom_menu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/ll_bottom_menu"
        android:background="@color/grey_300" />

    <LinearLayout
        android:id="@+id/ll_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <com.tongban.corelib.widget.view.ChangeColorView
            android:id="@+id/ccv_discover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="4dp"
            app:changeColor="@color/theme_red"
            app:changeIcon="@mipmap/ic_menu_discover_normal"
            app:changeText="@string/discover"
            app:changeTextSize="12sp"
            app:defaultColor="@color/brown_300" />

        <com.tongban.corelib.widget.view.ChangeColorView
            android:id="@+id/ccv_topic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="4dp"
            app:changeColor="@color/theme_red"
            app:changeIcon="@mipmap/ic_menu_circle_normal"
            app:changeText="@string/topic"
            app:changeTextSize="12sp"
            app:defaultColor="@color/brown_300" />

        <com.tongban.corelib.widget.view.ChangeColorView
            android:id="@+id/ccv_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="4dp"
            app:changeColor="@color/theme_red"
            app:changeIcon="@mipmap/ic_menu_recommend_normal"
            app:changeText="@string/group"
            app:changeTextSize="12sp"
            app:defaultColor="@color/brown_300" />
    </LinearLayout>


</RelativeLayout>
