<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="8dp"
        android:background="@color/weak_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ChatSettingLayout"
                android:minHeight="48dp">

                <ImageView
                    android:id="@+id/iv_user_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_group_name"
                    style="@style/ChatSettingRightText"
                    android:text="修改头像"
                    android:textColor="@drawable/selector_text_color" />
            </LinearLayout>

            <LinearLayout
                style="@style/ChatSettingLayout"
                android:minHeight="48dp">

                <TextView
                    style="@style/ChatSettingLeftText"
                    android:text="昵称" />

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/ChatSettingRightText"
                    android:text="王宝强" />
            </LinearLayout>

            <LinearLayout
                style="@style/ChatSettingLayout"
                android:minHeight="48dp">

                <TextView
                    style="@style/ChatSettingLeftText"
                    android:text="@string/phone_num" />

                <TextView
                    android:id="@+id/tv_phone_num"
                    style="@style/ChatSettingRightText"
                    android:text="15910662995" />
            </LinearLayout>

            <LinearLayout
                style="@style/ChatSettingLayout"
                android:minHeight="48dp">

                <TextView
                    style="@style/ChatSettingLeftText"
                    android:text="职业" />

                <TextView
                    android:id="@+id/tv_work"
                    style="@style/ChatSettingRightText"
                    android:text="幼儿教师" />

            </LinearLayout>

            <LinearLayout
                style="@style/ChatSettingLayout"
                android:minHeight="48dp">

                <TextView
                    style="@style/ChatSettingLeftText"
                    android:text="宝宝性别" />

                <TextView
                    android:id="@+id/tv_child_sex"
                    style="@style/ChatSettingRightText"
                    android:text="男" />

            </LinearLayout>

            <LinearLayout
                style="@style/ChatSettingLayout"
                android:minHeight="48dp">

                <TextView
                    style="@style/ChatSettingLeftText"
                    android:text="宝宝年龄" />

                <TextView
                    android:id="@+id/tv_child_age"
                    style="@style/ChatSettingRightText"
                    android:text="3岁" />

            </LinearLayout>

            <LinearLayout
                style="@style/ChatSettingLayout"
                android:minHeight="48dp">

                <TextView
                    style="@style/ChatSettingLeftText"
                    android:text="宝宝星座" />

                <TextView
                    android:id="@+id/tv_child_constellation"
                    style="@style/ChatSettingRightText"
                    android:text="巨蟹座" />

            </LinearLayout>

            <LinearLayout
                style="@style/ChatSettingLayout"
                android:minHeight="48dp">

                <TextView
                    style="@style/ChatSettingLeftText"
                    android:text="宝宝幼儿园" />

                <TextView
                    android:id="@+id/tv_chile_school"
                    style="@style/ChatSettingRightText"
                    android:text="清华大学" />

            </LinearLayout>

            <LinearLayout
                style="@style/ChatSettingLayout"
                android:minHeight="48dp">

                <TextView
                    style="@style/ChatSettingLeftText"
                    android:text="地区" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/ChatSettingRightText"
                    android:text="北京市朝阳区" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
