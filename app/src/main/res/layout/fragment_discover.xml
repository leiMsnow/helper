<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<View-->
    <!--android:layout_width="1dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_marginLeft="@dimen/discover_time_line_left_margin"-->
    <!--android:background="@color/grey_500" />-->

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_discover_timeline" />

            <include layout="@layout/item_discover_multi_img3" />

            <include layout="@layout/item_discover_timeline" />

            <include layout="@layout/item_discover_multi_portrait" />

            <include layout="@layout/item_discover_timeline" />

            <include layout="@layout/item_discover_portrait" />

            <include layout="@layout/item_discover_timeline" />

            <include layout="@layout/item_discover_single_product" />
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tongban.corelib.widget.view.SemicircleImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/discover_toolbar_height"
            android:src="@drawable/bg_light" />

        <com.tongban.corelib.widget.view.CircleImageView
            android:id="@+id/iv_user_portrait"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/rc_default_portrait" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_user_portrait"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_user_portrait"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="小鹿妈妈"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_user_name"
            android:layout_alignTop="@+id/tv_user_name"
            android:layout_toLeftOf="@+id/iv_search_all"
            android:layout_toRightOf="@+id/tv_user_name"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:singleLine="true"
            android:text="宝宝5岁零1个月，1年纪预备生，伊顿国际小学"
            android:textColor="@color/theme_red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_user_more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_user_portrait"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/iv_search_all"
            android:layout_toRightOf="@+id/iv_user_portrait"
            android:gravity="center_vertical"
            android:text="依然淘气 | 体能发育快"
            android:textColor="@color/grey_500"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_search_all"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/selector_white_to_gray"
            android:scaleType="center"
            android:src="@mipmap/ic_menu_search" />
    </RelativeLayout>

</FrameLayout>
