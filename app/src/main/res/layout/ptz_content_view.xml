<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weak_grey"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_my_group"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/selector_white_to_gray"
        android:drawableLeft="@mipmap/ic_menu_circle_normal"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/my_group" />

    <TextView
        android:id="@+id/tv_my_collect"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/selector_white_to_gray"
        android:drawableLeft="@mipmap/ic_menu_circle_normal"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/my_collect" />

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/selector_white_to_gray"
        android:drawableLeft="@mipmap/ic_menu_circle_normal"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/feedback"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_white_to_gray"
        android:drawableLeft="@mipmap/ic_menu_circle_normal"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/settings"
        android:visibility="gone"/>
</LinearLayout>
