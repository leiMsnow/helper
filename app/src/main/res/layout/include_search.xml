<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_text_material_brown">

    <android.support.v7.widget.SearchView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_search_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_corners_white_bg"
        android:imeOptions="actionSearch"
        android:inputType="textCapWords"
        app:defaultQueryHint="@string/search_group_name"
        style="@style/Widget.AppCompat.SearchView.IM"
        app:iconifiedByDefault="false" />

</LinearLayout>