<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!-- 序号 -->
        <TextView
            android:id="@+id/tv_cursor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/shape_circle_bg_deep_orange"
            android:gravity="center"
            android:textColor="@color/white"/>
        <!-- 商品名称 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:textColor="@color/main_black"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 商品图片的容器 -->
    <LinearLayout
        android:id="@+id/ll_product_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textSize="16sp"/>

    <!-- 【图书简介】 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_desc"
        android:textColor="@color/main_deep_orange"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_product_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"/>

    <!-- 【适读人群】 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suitable_for"
        android:textColor="@color/main_deep_orange"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_suitable_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"/>

    <!-- 【推荐理由】 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recommend_cause"
        android:textColor="@color/main_deep_orange"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_recommend_cause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"/>

    <!-- 查看商品详情 -->
    <Button
        android:id="@+id/btn_detail"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_corners_bg_deep_orange"
        android:text="@string/view_details"
        android:textColor="@color/white"
        android:textSize="16sp"/>
</LinearLayout>